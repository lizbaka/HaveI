<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bookkeep_date_card_star"
        android:layout_width="@dimen/ui_icon_size_small"
        android:layout_height="@dimen/ui_icon_size_small"
        android:layout_marginHorizontal="@dimen/widget_inview_margin"
        android:src="@drawable/ic_star" />

    <TextView
        android:id="@+id/bookkeep_date_card_date"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/widget_inview_margin"
        android:layout_toRightOf="@id/bookkeep_date_card_star"
        android:text="[MM-dd]" />

    <TextView
        android:id="@+id/bookkeep_date_card_weekday"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/widget_inview_margin"
        android:layout_toRightOf="@id/bookkeep_date_card_date"
        android:text="[EEEE]" />

    <TextView
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/bookkeep_date_card_io"
        android:layout_toRightOf="@id/bookkeep_date_card_weekday"
        android:gravity="right"
        android:layout_marginHorizontal="@dimen/widget_inview_margin"
        android:text="@string/total"/>

    <TextView
        android:id="@+id/bookkeep_date_card_io"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="@dimen/widget_inview_margin"
        android:textColor="@color/red_500"
        android:text="-1234.56" />


</RelativeLayout>