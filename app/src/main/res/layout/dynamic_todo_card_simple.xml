<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Dynamic_card.border"
    app:strokeWidth="0dp"
    android:layout_margin="0dp"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/todo_card_icon_container"
            android:layout_width="@dimen/round_icon_background_size"
            android:layout_height="@dimen/round_icon_background_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="@dimen/widget_inview_margin"
            android:layout_marginBottom="0dp"
            android:background="@drawable/bg_round_icon">

            <ImageView
                android:id="@+id/todo_card_icon"
                android:layout_width="@dimen/round_icon_size"
                android:layout_height="@dimen/round_icon_size"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/todo_card_time"
            android:layout_toRightOf="@id/todo_card_icon_container">

            <TextView
                android:id="@+id/todo_card_title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_inview_margin"
                android:layout_marginTop="0dp"
                android:layout_marginRight="@dimen/widget_inview_margin"
                android:layout_marginBottom="@dimen/widget_inview_margin"
                android:maxLines="1"
                android:text="[Todo_Card_Title]" />

            <TextView
                android:id="@+id/todo_card_tag"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/todo_card_title"
                android:layout_marginLeft="@dimen/widget_inview_margin"
                android:layout_marginTop="0dp"
                android:layout_marginRight="@dimen/widget_inview_margin"
                android:layout_marginBottom="0dp"
                android:maxLines="1"
                android:text="[Todo_Card_Tag]" />
        </RelativeLayout>

        <TextView
            android:id="@+id/todo_card_time"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/widget_inview_margin"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="@dimen/widget_inview_margin"
            android:text="TT:SS"
            android:textColor="?attr/colorPrimary" />

        <TextView
            android:id="@+id/todo_card_date"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/todo_card_time"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/widget_inview_margin"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:text="YYYY-MM-DD"
            android:visibility="gone" />


    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>