<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Dynamic_card.border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/budget_name"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/widget_inview_margin"
            android:layout_toLeftOf="@id/budget_values_container"
            android:text="[预算类型]" />

        <ProgressBar
            android:id="@+id/budget_progressbar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/budget_name"
            android:layout_marginHorizontal="@dimen/widget_inview_margin"
            android:layout_toLeftOf="@id/budget_values_container"
            android:progress="50"/>

        <LinearLayout
            android:id="@+id/budget_values_container"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/widget_inview_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/widget_inview_margin"
                    android:text="@string/budget"
                    android:textColor="@color/grey_500" />

                <TextView
                    android:id="@+id/budget_value"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/widget_inview_margin"
                    android:text="[1234]"
                    android:textColor="@color/grey_500" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/widget_inview_margin"
                    android:text="@string/remain"
                    android:textColor="@color/grey_500" />

                <TextView
                    android:id="@+id/budget_remain"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/widget_inview_margin"
                    android:text="[1234]"
                    android:textColor="@color/grey_500" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>