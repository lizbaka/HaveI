<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/bookkeep_add_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:gravity="center"
            android:minHeight="?attr/actionBarSize">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/date_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#00000000"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_select_date"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YYYY-MM-DD" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_round_expand_more_24" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <RadioGroup
            android:id="@+id/bookkeep_add_io"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/bookkeep_add_radio_expenditure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/amber_200"
                android:text="@string/expenditure" />

            <RadioButton
                android:id="@+id/bookkeep_add_radio_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/amber_200"
                android:text="@string/income" />

        </RadioGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bookkeep_add_tag_recyc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bookkeep_add_input"
            android:layout_below="@id/bookkeep_add_io"
            android:layout_marginHorizontal="@dimen/card_margin" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bookkeep_add_input"
            style="@style/Dynamic_card.border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="0dp"
            android:clickable="false"
            app:cardCornerRadius="0dp"
            app:contentPadding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/bookkeep_add_wallet"
                        android:layout_width="@dimen/bookkeep_add_record_height"
                        android:layout_height="@dimen/bookkeep_add_record_height"
                        app:srcCompat="@drawable/ic_account_book" />

                    <EditText
                        android:id="@+id/bookkeep_add_title"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/bookkeep_add_record_height"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/bookkeep_add_note"
                        android:inputType="textShortMessage" />

                </LinearLayout>

                <EditText
                    android:id="@+id/bookkeep_add_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:background="@color/white"
                    android:textSize="30sp"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:ems="10"
                    android:hint="@string/bookkeep_add_input_hint" />

                <GridLayout
                    android:id="@+id/bookkeep_add_numpad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:rowCount="4">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/numpad_1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/bookkeep_add_button_height"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:clickable="true"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/widget_inview_margin"
                            android:text="1" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/numpad_2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/bookkeep_add_button_height"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:clickable="true"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/widget_inview_margin"
                            android:text="2" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/numpad_3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/bookkeep_add_button_height"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:clickable="true"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/widget_inview_margin"
                            android:text="3" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/numpad_4"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/bookkeep_add_button_height"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:clickable="true"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/widget_inview_margin"
                            android:text="4" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/numpad_5"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/bookkeep_add_button_height"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:clickable="true"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/widget_inview_margin"
                            android:text="5" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/numpad_6"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/bookkeep_add_button_height"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:clickable="true"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/widget_inview_margin"
                            android:text="6" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/numpad_7"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/bookkeep_add_button_height"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:clickable="true"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/widget_inview_margin"
                            android:text="7" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/numpad_8"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/bookkeep_add_button_height"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:clickable="true"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/widget_inview_margin"
                            android:text="8" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/numpad_9"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/bookkeep_add_button_height"
                        android:layout_row="2"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:clickable="true"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/widget_inview_margin"
                            android:text="9" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/numpad_0"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/bookkeep_add_button_height"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:clickable="true"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/widget_inview_margin"
                            android:text="0" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/numpad_dot"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/bookkeep_add_button_height"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:clickable="true"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/widget_inview_margin"
                            android:text="." />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/numpad_back"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/bookkeep_add_button_height"
                        android:layout_row="3"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:clickable="true"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="37sp"
                            android:layout_height="37sp"
                            android:layout_gravity="center"
                            android:src="@drawable/delete1" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/numpad_confirm"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="0"
                        android:layout_rowSpan="4"
                        android:layout_rowWeight="1"
                        android:layout_column="3"
                        android:layout_columnWeight="1"
                        android:backgroundTint="?attr/colorPrimary"
                        android:clickable="true"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/widget_inview_margin"
                            android:text="@string/confirm"
                            android:textColor="@color/white" />

                    </com.google.android.material.card.MaterialCardView>

                </GridLayout>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>