<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/habit_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/each_day_sentence"
                android:gravity="center" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/chooser_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_year"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/habit_detail_fixed_point"
                android:layout_marginRight="30dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_year"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/amber_200"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/habit_detail_fixed_point"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_month"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/habit_detail_fixed_point"
                android:layout_marginLeft="30dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_month"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/amber_200" />


            </RelativeLayout>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:contentPadding="5dp">

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/habit_detail_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mcv_showOtherDates="decorated_disabled"
            app:mcv_selectionColor="?attr/colorPrimary"
            app:mcv_selectionMode="none"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/amber_200"
            android:layout_margin="@dimen/widget_inview_margin"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/widget_inview_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/widget_inview_margin"
                android:background="@color/amber_200"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="@string/actual_clock_in"
                    android:textSize="@dimen/font_size"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/widget_inview_margin"
                    android:textColor="@color/white"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size"
                    android:layout_margin="@dimen/widget_inview_margin"
                    android:id="@+id/actual_clock_in"
                    android:layout_weight="0.4"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/amber_200"
            android:layout_margin="@dimen/widget_inview_margin"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/widget_inview_margin">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/widget_inview_margin"
            android:background="@color/amber_200"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="@string/plan_clock_in"
                android:textSize="@dimen/font_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/widget_inview_margin"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size"
                android:layout_margin="@dimen/widget_inview_margin"
                android:id="@+id/plan_clock_in"
                android:layout_weight="0.4"/>

        </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/amber_200"
            android:layout_margin="@dimen/widget_inview_margin"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/widget_inview_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/widget_inview_margin"
                android:background="@color/amber_200"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="@string/habit_ranking"
                    android:textSize="@dimen/font_size"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/widget_inview_margin"
                    android:textColor="@color/white"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/widget_inview_margin"
                    android:textSize="@dimen/font_size"
                    android:id="@+id/habit_ranking"
                    android:layout_weight="0.4"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>