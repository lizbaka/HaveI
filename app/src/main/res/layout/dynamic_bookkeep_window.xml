<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Dynamic_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bookkeep_window_expenditure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bookkeep_window_record_border"
            android:layout_marginTop="@dimen/bookkeep_window_record_border"
            android:text="@string/account_window_expenditure" />

        <TextView
            android:id="@+id/bookkeep_window_expenditure_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bookkeep_window_expenditure"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/bookkeep_window_record_border" />


        <TextView
            android:id="@+id/bookkeep_window_remaining_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookkeep_window_expenditure"
            android:layout_alignLeft="@+id/bookkeep_window_expenditure"
            android:layout_marginTop="@dimen/bookkeep_window_record_margin"
            android:text="@string/account_window_remaining_budget" />

        <TextView
            android:id="@+id/bookkeep_window_remaining_budget_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookkeep_window_expenditure_value"
            android:layout_alignTop="@+id/bookkeep_window_remaining_budget"
            android:layout_alignRight="@+id/bookkeep_window_expenditure_value"
            android:layout_marginTop="@dimen/bookkeep_window_record_margin" />


        <TextView
            android:id="@+id/bookkeep_window_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookkeep_window_remaining_budget"
            android:layout_alignLeft="@+id/bookkeep_window_expenditure"
            android:layout_marginTop="@dimen/bookkeep_window_record_margin"
            android:layout_marginBottom="@dimen/bookkeep_window_record_border"
            android:text="@string/account_window_income" />

        <TextView
            android:id="@+id/bookkeep_window_income_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookkeep_window_remaining_budget_value"
            android:layout_alignTop="@+id/bookkeep_window_income"
            android:layout_alignRight="@+id/bookkeep_window_expenditure_value"
            android:layout_marginTop="@dimen/bookkeep_window_record_margin" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>