    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/bookkeep_annual_income_and_expenses"
                layout="@layout/dynamic_bookkeep_annual_income_and_expenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar_bookkeep_annual_account_detail"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart_in"
                android:layout_width="match_parent"
                android:layout_height="350dp" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart_out"
                android:layout_width="match_parent"
                android:layout_height="350dp" />

            <com.github.mikephil.charting.charts.LineChart

                android:id="@+id/chart_line1"
                android:layout_width="match_parent"
                android:layout_height="350dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>