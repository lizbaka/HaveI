<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/bookkeep_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:gravity="center"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_show_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#00000000"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_select_date"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YYYY-MM"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_round_expand_more_24" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/bookkeep_annual_account"
                android:layout_width="@dimen/ui_icon_size_medium"
                android:layout_height="@dimen/ui_icon_size_medium"
                android:layout_marginRight="@dimen/widget_inview_margin"
                android:layout_gravity="right"
                android:contentDescription="@string/bookkeep_annual_account_button"
                android:onClick="onClickFindAnnualAccountDetail"
                android:src="@drawable/calendar" />

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <include
            android:id="@+id/bookkeep_window"
            layout="@layout/dynamic_bookkeep_three_card"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_today_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bookkeep_window"
            android:layout_marginHorizontal="@dimen/card_margin"
            android:layout_marginTop="@dimen/card_margin" />

        <RelativeLayout
            android:id="@+id/bookkeep_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/bookkeep_bottom_bar_statistics"
                android:layout_width="@dimen/bookkeep_bottom_bar_button_width"
                android:layout_height="@dimen/bookkeep_bottom_bar_button_height"
                android:layout_alignBottom="@id/bookkeep_bottom_bar_add"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/bookkeep_bottom_bar_button_horizontal_margin"
                android:gravity="center"
                android:onClick="onClickFindStatisticsView"
                android:text="@string/bookkeep_statistics" />

            <ImageButton
                android:id="@+id/bookkeep_bottom_bar_add"
                android:layout_width="@dimen/bookkeep_bottom_bar_imageButton_size"
                android:layout_height="@dimen/bookkeep_bottom_bar_imageButton_size"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/bookkeep_bottom_bar_button_vertical_margin"
                android:background="?attr/actionBarItemBackground"
                android:onClick="onClickAddBookkeep"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add4" />

            <Button
                android:id="@+id/bookeep_bottom_bar_property"
                android:layout_width="@dimen/bookkeep_bottom_bar_button_width"
                android:layout_height="@dimen/bookkeep_bottom_bar_button_height"
                android:layout_alignBottom="@id/bookkeep_bottom_bar_add"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/bookkeep_bottom_bar_button_horizontal_margin"
                android:onClick="onClickFindPropertyView"
                android:text="@string/bookkeep_property" />

        </RelativeLayout>


    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>