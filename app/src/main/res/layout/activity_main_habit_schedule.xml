<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/habit_event_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:gravity="center"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/habit_schedule_title"
            app:layout_scrollFlags="scroll|enterAlways|snap">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/habit_date"
            android:text="@string/habit_date"
            android:textSize="@dimen/font_size"
            android:backgroundTint="@color/amber_500"
            android:textColor="@color/white"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/habit_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height"
            android:background="#22000000"
            android:layout_margin="@dimen/widget_inview_margin"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Dynamic_card"
            android:layout_margin="@dimen/widget_inview_margin"
            app:contentPadding="@dimen/card_content_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:id="@+id/event_date"
                    android:text="@string/schedule_date"
                    android:background="@color/amber_500"
                    android:textColor="@color/white"
                    android:layout_margin="@dimen/widget_inview_margin"
                    android:textSize="@dimen/font_size"
                    android:padding="@dimen/card_content_padding"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:id="@+id/event_weather"
                    android:text="@string/schedule_weather"
                    android:background="@color/amber_500"
                    android:textColor="@color/white"
                    android:layout_margin="@dimen/widget_inview_margin"
                    android:textSize="@dimen/font_size"/>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/event_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/widget_inview_margin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/habit_event_add">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/habit_list_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="@dimen/round_button_margin"
                android:textColor="@color/white"
                android:backgroundTint="?attr/colorPrimary"
                app:icon="@drawable/ic_baseline_add_24"
                app:iconTint="@color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/habit_event_add"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/button_margin_narrow">

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cornerRadius="@dimen/card_corner_radius"
                android:backgroundTint="@color/amber_500"
                android:textColor="@color/white"
                android:text="@string/schedule_library"
                android:textSize="@dimen/font_size"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/habit_event_add"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/button_margin_narrow">

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cornerRadius="@dimen/card_corner_radius"
                android:backgroundTint="@color/amber_500"
                android:textColor="@color/white"
                android:text="@string/habit_library"
                android:textSize="@dimen/font_size"/>

        </RelativeLayout>

    </RelativeLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>