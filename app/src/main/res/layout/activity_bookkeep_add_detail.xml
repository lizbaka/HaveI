<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/add_account_detail_date_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/add_account_detail_expenditure_or_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_account_detail_date_spinner">

        <RadioButton
            android:id="@+id/add_account_detail_radio_expenditure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/amber_200"
            android:text="@string/bookkeep_expenditure"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="218dp" />

        <RadioButton
            android:id="@+id/add_account_detail_radio_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/amber_200"
            android:text="@string/bookkeep_income"
            tools:layout_editor_absoluteX="170dp"
            tools:layout_editor_absoluteY="76dp" />

    </RadioGroup>

    <ImageButton
        android:id="@+id/add_account_detail_wallet"
        android:layout_width="@dimen/add_account_detail_record_height"
        android:layout_height="@dimen/add_account_detail_record_height"
        android:layout_marginLeft="@dimen/add_account_detail_calculator_border_margin"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/add_account_detail_relativeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_account_book" />

    <EditText
        android:id="@+id/add_account_detail_account_label"
        android:layout_width="0dp"
        android:layout_height="@dimen/add_account_detail_record_height"
        android:ems="10"
        android:hint="@string/account_label"
        android:inputType="textShortMessage"
        app:layout_constraintBottom_toTopOf="@+id/add_account_detail_relativeLayout"
        app:layout_constraintEnd_toStartOf="@+id/add_account_detail__money_value"
        app:layout_constraintStart_toEndOf="@+id/add_account_detail_wallet" />

    <EditText
        android:id="@+id/add_account_detail__money_value"
        android:layout_width="100dp"
        android:layout_height="@dimen/add_account_detail_record_height"
        android:layout_marginEnd="@dimen/add_account_detail_calculator_border_margin"
        android:ems="10"
        android:inputType="number"
        android:text="@string/money_value"
        app:layout_constraintBottom_toTopOf="@+id/add_account_detail_relativeLayout"
        app:layout_constraintEnd_toEndOf="parent" />

    <RelativeLayout
        android:id="@+id/add_account_detail_relativeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/add_account_detail_number_one"
            android:layout_width="@dimen/add_account_detail_button_width"
            android:layout_height="@dimen/add_account_detail_button_height"
            android:layout_marginLeft="@dimen/add_account_detail_calculator_border_margin"
            android:layout_marginTop="@dimen/add_account_detail_calculator_margin"
            android:text="@string/number_one" />

        <Button
            android:id="@+id/add_account_detail_number_two"
            android:layout_width="@dimen/add_account_detail_button_width"
            android:layout_height="@dimen/add_account_detail_button_height"
            android:layout_alignTop="@+id/add_account_detail_number_one"
            android:layout_marginLeft="@dimen/add_account_detail_calculator_margin"
            android:layout_toRightOf="@+id/add_account_detail_number_one"
            android:text="@string/number_two" />

        <Button
            android:id="@+id/add_account_detail_number_three"
            android:layout_width="@dimen/add_account_detail_button_width"
            android:layout_height="@dimen/add_account_detail_button_height"
            android:layout_alignTop="@+id/add_account_detail_number_one"
            android:layout_marginLeft="@dimen/add_account_detail_calculator_margin"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/add_account_detail_number_two"
            android:text="@string/number_three" />

        <Button
            android:id="@+id/add_account_detail_number_four"
            android:layout_width="@dimen/add_account_detail_button_width"
            android:layout_height="@dimen/add_account_detail_button_height"
            android:layout_below="@+id/add_account_detail_number_one"
            android:layout_alignLeft="@id/add_account_detail_number_one"
            android:layout_marginTop="@dimen/add_account_detail_calculator_margin"
            android:text="@string/number_four" />

        <Button
            android:id="@+id/add_account_detail_number_five"
            android:layout_width="@dimen/add_account_detail_button_width"
            android:layout_height="@dimen/add_account_detail_button_height"
            android:layout_below="@+id/add_account_detail_number_two"
            android:layout_alignLeft="@id/add_account_detail_number_two"
            android:layout_alignTop="@+id/add_account_detail_number_four"
            android:layout_toRightOf="@+id/add_account_detail_number_four"
            android:text="@string/number_five" />

        <Button
            android:id="@+id/add_account_detail_number_six"
            android:layout_width="@dimen/add_account_detail_button_width"
            android:layout_height="@dimen/add_account_detail_button_height"
            android:layout_below="@+id/add_account_detail_number_three"
            android:layout_alignLeft="@id/add_account_detail_number_three"
            android:layout_alignTop="@+id/add_account_detail_number_four"
            android:layout_toRightOf="@+id/add_account_detail_number_five"
            android:text="@string/number_six" />

        <Button
            android:id="@+id/add_account_detail_number_seven"
            android:layout_width="@dimen/add_account_detail_button_width"
            android:layout_height="@dimen/add_account_detail_button_height"
            android:layout_below="@+id/add_account_detail_number_four"
            android:layout_alignLeft="@id/add_account_detail_number_one"
            android:layout_marginTop="@dimen/add_account_detail_calculator_margin"
            android:text="@string/number_seven" />

        <Button
            android:id="@+id/add_account_detail_number_eight"
            android:layout_width="@dimen/add_account_detail_button_width"
            android:layout_height="@dimen/add_account_detail_button_height"
            android:layout_below="@+id/add_account_detail_number_five"
            android:layout_alignLeft="@id/add_account_detail_number_two"
            android:layout_alignTop="@+id/add_account_detail_number_seven"
            android:layout_toRightOf="@+id/add_account_detail_number_seven"
            android:text="@string/number_eight" />

        <Button
            android:id="@+id/add_account_detail_number_nine"
            android:layout_width="@dimen/add_account_detail_button_width"
            android:layout_height="@dimen/add_account_detail_button_height"
            android:layout_below="@+id/add_account_detail_number_six"
            android:layout_alignLeft="@id/add_account_detail_number_three"
            android:layout_alignTop="@+id/add_account_detail_number_seven"
            android:layout_toRightOf="@+id/add_account_detail_number_eight"
            android:text="@string/number_nine" />

        <Button
            android:id="@+id/add_account_detail_symbol_point"
            android:layout_width="@dimen/add_account_detail_button_width"
            android:layout_height="@dimen/add_account_detail_button_height"
            android:layout_below="@+id/add_account_detail_number_seven"
            android:layout_alignLeft="@+id/add_account_detail_number_one"
            android:layout_marginTop="@dimen/add_account_detail_calculator_margin"
            android:text="@string/symbol_point" />

        <Button
            android:id="@+id/add_account_detail_number_zero"
            android:layout_width="@dimen/add_account_detail_button_width"
            android:layout_height="@dimen/add_account_detail_button_height"
            android:layout_below="@+id/add_account_detail_number_eight"
            android:layout_alignTop="@+id/add_account_detail_symbol_point"
            android:layout_marginLeft="@dimen/add_account_detail_calculator_margin"
            android:layout_marginBottom="@dimen/add_account_detail_calculator_border_margin"
            android:layout_toRightOf="@+id/add_account_detail_symbol_point"
            android:text="@string/number_zero" />

        <Button
            android:id="@+id/add_account_detail_symbol_equal"
            android:layout_width="@dimen/add_account_detail_button_width"
            android:layout_height="@dimen/add_account_detail_button_height"
            android:layout_below="@+id/add_account_detail_number_nine"
            android:layout_alignTop="@+id/add_account_detail_symbol_point"
            android:layout_marginLeft="@dimen/add_account_detail_calculator_margin"
            android:layout_toRightOf="@+id/add_account_detail_number_zero"
            android:text="@string/symbol_equal" />

        <Button
            android:id="@+id/add_account_detail_symbol_add"
            android:layout_width="@dimen/add_account_detail_button_width"
            android:layout_height="@dimen/add_account_detail_button_height"
            android:layout_alignTop="@+id/add_account_detail_number_one"
            android:layout_marginLeft="@dimen/add_account_detail_calculator_margin"
            android:layout_toRightOf="@+id/add_account_detail_number_three"
            android:text="@string/symbol_add" />

        <Button
            android:id="@+id/add_account_detail_symbol_minus"
            android:layout_width="@dimen/add_account_detail_button_width"
            android:layout_height="@dimen/add_account_detail_button_height"
            android:layout_below="@+id/add_account_detail_symbol_add"
            android:layout_alignTop="@+id/add_account_detail_number_four"
            android:layout_marginLeft="@dimen/add_account_detail_calculator_margin"
            android:layout_toRightOf="@+id/add_account_detail_number_six"
            android:text="@string/symbol_minus" />

        <Button
            android:id="@+id/add_account_detail_symbol_delete"
            android:layout_width="@dimen/add_account_detail_button_width"
            android:layout_height="@dimen/add_account_detail_button_height"
            android:layout_alignLeft="@+id/add_account_detail_symbol_add"
            android:layout_alignTop="@+id/add_account_detail_number_seven"
            android:layout_toRightOf="@+id/add_account_detail_number_nine"/>

        <Button
            android:id="@+id/add_account_detail_symbol_complete"
            android:layout_width="@dimen/add_account_detail_button_width"
            android:layout_height="@dimen/add_account_detail_button_height"
            android:layout_below="@+id/add_account_detail_symbol_delete"
            android:layout_alignLeft="@+id/add_account_detail_symbol_add"
            android:layout_alignTop="@+id/add_account_detail_symbol_point"
            android:layout_toRightOf="@+id/add_account_detail_symbol_equal"
            android:text="@string/symbol_complete" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/add_account_detail_account_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_account_detail_expenditure_or_income" />


</androidx.constraintlayout.widget.ConstraintLayout>