<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bookkeep_bottom_bar_statistics"
        android:layout_width="@dimen/bookkeep_bottom_bar_button_width"
        android:layout_height="@dimen/bookkeep_bottom_bar_button_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/bookkeep_bottom_bar_button_horizontal_margin"
        android:layout_marginBottom="@dimen/bookkeep_bottom_bar_button_vertical_margin"
        android:gravity="center"
        android:text="@string/bookkeep_statistics" />

    <ImageButton
        android:id="@+id/bookkeep_bottom_bar_add"
        android:layout_width="@dimen/bookkeep_bottom_bar_imageButton_size"
        android:layout_height="@dimen/bookkeep_bottom_bar_imageButton_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/bookkeep_bottom_bar_button_vertical_margin"
        android:background="?attr/actionBarItemBackground"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_add4" />

    <Button
        android:id="@+id/bookeep_bottom_bar_property"
        android:layout_width="@dimen/bookkeep_bottom_bar_button_width"
        android:layout_height="@dimen/bookkeep_bottom_bar_button_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/bookkeep_bottom_bar_button_vertical_margin"
        android:layout_marginRight="@dimen/bookkeep_bottom_bar_button_horizontal_margin"
        android:text="@string/bookkeep_property" />

</RelativeLayout>