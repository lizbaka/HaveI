<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Dynamic_card.border">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/todo_card_icon_container"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/widget_inview_margin"
            android:layout_width="@dimen/round_icon_background_size"
            android:layout_height="@dimen/round_icon_background_size"
            android:background="@drawable/bg_round_icon">

            <ImageView
                android:id="@+id/todo_card_icon"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/round_icon_size"
                android:layout_height="@dimen/round_icon_size"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/todo_card_icon_container"
            android:layout_toLeftOf="@id/todo_card_date"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/todo_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_margin="@dimen/widget_inview_margin"
                android:maxLines="1"
                android:text="[Todo_Card_Title]" />

            <TextView
                android:id="@+id/todo_card_tag"
                android:layout_below="@id/todo_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_margin="@dimen/widget_inview_margin"
                android:maxLines="1"
                android:visibility="gone"
                android:text="[Todo_Card_Tag]"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/todo_card_time"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="?attr/colorPrimary"
            android:layout_margin="@dimen/widget_inview_margin"
            android:text="TT:SS"/>

        <TextView
            android:id="@+id/todo_card_date"
            android:layout_alignParentRight="true"
            android:layout_below="@id/todo_card_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_margin="@dimen/widget_inview_margin"
            android:text="YYYY-MM-DD"/>


    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>