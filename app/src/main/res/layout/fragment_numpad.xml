<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:background="@color/white"
        android:textSize="30sp"
        android:enabled="false"
        android:textColor="@color/black"
        android:ems="10"
        android:hint="@string/bookkeep_add_input_hint" />

    <GridLayout
        android:id="@+id/bookkeep_add_numpad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/numpad_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/bookkeep_add_button_height"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:clickable="true"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/widget_inview_margin"
                android:text="1" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/numpad_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/bookkeep_add_button_height"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:clickable="true"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/widget_inview_margin"
                android:text="2" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/numpad_3"
            android:layout_width="0dp"
            android:layout_height="@dimen/bookkeep_add_button_height"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:clickable="true"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/widget_inview_margin"
                android:text="3" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/numpad_4"
            android:layout_width="0dp"
            android:layout_height="@dimen/bookkeep_add_button_height"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:clickable="true"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/widget_inview_margin"
                android:text="4" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/numpad_5"
            android:layout_width="0dp"
            android:layout_height="@dimen/bookkeep_add_button_height"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:clickable="true"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/widget_inview_margin"
                android:text="5" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/numpad_6"
            android:layout_width="0dp"
            android:layout_height="@dimen/bookkeep_add_button_height"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:clickable="true"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/widget_inview_margin"
                android:text="6" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/numpad_7"
            android:layout_width="0dp"
            android:layout_height="@dimen/bookkeep_add_button_height"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:clickable="true"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/widget_inview_margin"
                android:text="7" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/numpad_8"
            android:layout_width="0dp"
            android:layout_height="@dimen/bookkeep_add_button_height"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:clickable="true"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/widget_inview_margin"
                android:text="8" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/numpad_9"
            android:layout_width="0dp"
            android:layout_height="@dimen/bookkeep_add_button_height"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:clickable="true"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/widget_inview_margin"
                android:text="9" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/numpad_0"
            android:layout_width="0dp"
            android:layout_height="@dimen/bookkeep_add_button_height"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:clickable="true"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/widget_inview_margin"
                android:text="0" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/numpad_dot"
            android:layout_width="0dp"
            android:layout_height="@dimen/bookkeep_add_button_height"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:clickable="true"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/widget_inview_margin"
                android:text="." />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/numpad_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/bookkeep_add_button_height"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:clickable="true"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="37sp"
                android:layout_height="37sp"
                android:layout_gravity="center"
                android:src="@drawable/ic_backspace" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/numpad_confirm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowSpan="4"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:clickable="true"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/widget_inview_margin"
                android:text="@string/confirm"
                android:textColor="@color/white" />

        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

</LinearLayout>