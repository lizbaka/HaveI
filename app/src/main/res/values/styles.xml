<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Dynamic_card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="android:layout_marginLeft">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/card_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_vertical</item>
        <item name="contentPadding">@dimen/card_padding</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Dynamic_card.border">
        <item name="strokeWidth">@dimen/card_border_width</item>
        <item name="strokeColor">@color/grey_200</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Widget.HaveI.AppWidget.Container" parent="android:Widget">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Widget.HaveI.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">@color/transparent</item>
    </style>
</resources>